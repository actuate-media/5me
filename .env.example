# 5me Configuration

# NextAuth.js - Generate with: openssl rand -base64 32
AUTH_SECRET=
AUTH_URL=http://localhost:3000

# Google OAuth (from Google Cloud Console)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Database Configuration (Split Architecture)
# Core DB: User, Company, Location, ReviewSource, Feedback, ReviewClick, CompanyUser
PRISMA_CORE=postgresql://user:password@host:5432/5me_core
# Widgets DB: Widget, WidgetLocation, Review, ReviewOverride, WidgetSummary
PRISMA_WIDGETS=postgresql://user:password@host:5432/5me_widgets

# Vercel Edge Config (optional)
EDGE_CONFIG=

# API Configuration
# For production: set to your production domain
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# SMTP.com Configuration (for email notifications)
# Get credentials at: https://my.smtp.com/settings/api
SMTP_CHANNEL_NAME=
SMTP_API_KEY=
SMTP_SENDER_EMAIL=
